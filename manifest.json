{
  "vendor": "vtex",
  "name": "powerreviews",
  "title": "PowerReviews",
  "description": "The most advanced collection and custom display capabilities delivering relevant and authentic shopping experiences across touch points and channels. More reviews. More trust. More sales.",
  "version": "2.0.0",
  "defaultLocale": "pt-BR",
  "builders": {
    "react": "3.x",
    "graphql": "1.x",
    "node": "4.x",
    "messages": "1.x",
    "store": "0.x",
    "pixel": "0.x",
    "docs": "0.x"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "vbase-read-write"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "display.powerreviews.com",
        "path": "/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "myvtex.com",
        "path": "/_v/graphql/private/v1"
      }
    }
  ],
  "mustUpdateAt": "2020-01-22",
  "categories": [],
  "registries": [
    "smartcheckout"
  ],
  "scripts": {
    "postreleasy": "vtex publish --verbose"
  },
  "settingsSchema": {
    "title": "PowerReviews",
    "type": "object",
    "properties": {
      "appKey": {
        "type": "string",
        "access": "public",
        "title": "App Key",
        "description": "Your App Key"
      },
      "merchantId": {
        "type": "string",
        "access": "public",
        "title": "Merchant Id",
        "description": "Enter your Merchant Id"
      },
      "merchantGroupId": {
        "type": "string",
        "access": "public",
        "title": "Merchant Group Id",
        "description": "Enter your Merchant Group Id"
      },
      "uniqueId": {
        "type": "string",
        "access": "public",
        "enum": [
          "productId",
          "linkText",
          "productReference"
        ],
        "default": "linkText",
        "title": "API Unique Id",
        "description": "The Unique Id referencing to the product id to get the reviews"
      },
      "reviewFormStyleSheetSrc": {
        "type": "string",
        "access": "public",
        "title": "New Review Form Stylesheet Source",
        "description": "Enter your stylesheet source for the new review form (http://www.example.com/yourcssfile.css)"
      },
      "qnaStyleSheetSrc": {
        "type": "string",
        "access": "public",
        "title": "Q&A Stylesheet Source",
        "description": "Enter your stylesheet source for the Q&A page (http://www.example.com/yourcssfile.css)"
      }
    }
  },
  "dependencies": {
    "vtex.slider-layout": "0.x",
    "vtex.styleguide": "9.x",
    "vtex.product-review-interfaces": "1.x",
    "vtex.product-summary-context": "0.x",
    "vtex.product-context": "0.x",
    "vtex.store-header": "2.x",
    "vtex.store": "2.x",
    "vtex.pixel-interfaces": "1.x",
    "vtex.store-image": "0.x",
    "vtex.css-handles": "0.x"
  },
  "billingOptions": {
    "support": {
      "url": "https://help-tickets.vtex.com/en/support?app=vtex.powerreviews"
    },
    "type": "free",
    "availableCountries": [
      "*"
    ]
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
